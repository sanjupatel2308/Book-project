    <style>
        * {
            box-sizing: border-box;
        }
        
        .main {
            width: 90%;
            height: 95vh;
            border-radius: 20px;
            background-image: url(./../img/img1.jpg);
            background-size: cover;
            box-shadow: 0px 0px 15px white;
        }
        
        .left {
            width: 50%;
            height: 100%;
            float: left;
            position: relative;
            border-right: 2px dashed black;
        }
        
        .right {
            width: 50%;
            height: 100%;
            float: left;
            padding: 20px;
        }
        
        .title {
            text-shadow: 2px 2px 0px rgb(96, 85, 70);
            text-decoration: underline;
        }
        
        .big {
            width: 80%;
            height: 50%;
            position: absolute;
            left: 10%;
            top: 5%;
            border: 3px solid gray;
            border-radius: 10px;
            background-size: contain;
            padding: 5px;
            box-shadow: 14px 14px 33px black;
            overflow: hidden;
        }
        
        .big1 {
            width: 100%;
            height: 100%;
        }
        
        .small {
            width: 25%;
            height: 30%;
            float: left;
            margin-left: 30px;
            margin-top: 70%;
            padding: 5px;
            box-shadow: 0px 0px 17px black;
        }
        
        .small:hover {
            box-shadow: 0px 0px 10px red;
            transition: 0.7s;
        }
        
        .img {
            background-size: cover;
            height: 100%;
            width: 100%;
        }
        
        .hvr-wobble-skew {
            width: 150px;
            height: 40px;
            margin-left: 80px;
            margin-top: 20px;
            border-radius: 15px;
            text-shadow: 1px 1px 0px rgb(96, 85, 70);
            font-weight: 500;
        }
        
        .hvr-wobble-skew {
            display: inline-block;
            vertical-align: middle;
            -webkit-transform: perspective(1px) translateZ(0);
            transform: perspective(1px) translateZ(0);
            box-shadow: 0 0 1px rgba(0, 0, 0, 0);
        }
        
        .hvr-wobble-skew:hover,
        .hvr-wobble-skew:focus,
        .hvr-wobble-skew:active {
            -webkit-animation-name: hvr-wobble-skew;
            animation-name: hvr-wobble-skew;
            -webkit-animation-duration: 1s;
            animation-duration: 1s;
            transition: 0.7s;
            background-color: rgba(6, 195, 220, 0.164);
            -webkit-animation-timing-function: ease-in-out;
            animation-timing-function: ease-in-out;
            -webkit-animation-iteration-count: 1;
            animation-iteration-count: 1;
        }
        
        @keyframes hvr-wobble-skew {
            16.65% {
                -webkit-transform: skew(-12deg);
                transform: skew(-12deg);
            }
            33.3% {
                -webkit-transform: skew(10deg);
                transform: skew(10deg);
            }
            49.95% {
                -webkit-transform: skew(-6deg);
                transform: skew(-6deg);
            }
            66.6% {
                -webkit-transform: skew(4deg);
                transform: skew(4deg);
            }
            83.25% {
                -webkit-transform: skew(-2deg);
                transform: skew(-2deg);
            }
            100% {
                -webkit-transform: skew(0);
                transform: skew(0);
            }
        }
    </style>

    <script>
        function addInToCart(userId, productId) {
            window.alert("dfsdssdf")
            var xhttp = new XMLHttpRequest();
            xhttp.open("GET", "/cart/add-to-cart/" + userId + "/" + productId, true);
            xhttp.send();
            alert(xhttp.onreadystatechange);
            xhttp.onreadystatechange = function() {
                if (xhttp.readyState == 4) {
                    let data = JSON.parse(xhttp.responseText);
                    window.alert(data.message);
                }
            }
        }
    </script>
