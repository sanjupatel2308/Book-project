<body>

    <%-include('_topbar.ejs')%>

        <div class='container-fluid main' style="margin-top: 100px;">
            <div class='left'>
                <%console.log(product.title)%>
                    <div class='big' id='container'>
                        <img src=" <%=product[0].thumbnail%> " class='img' id='mainImage' />
                    </div>

                    <% let allImages = product[0].imageArray.trim().split(" ");
                var i=0;
                for(let image of allImages){%>
                        <div class="small">
                            <img onClick="changeImage(this)" src="<%=image%>" width="100px" height="100px" class="ml-2 mb-2 img" style="box-shadow: 5px 5px 5px;" />
